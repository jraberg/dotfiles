##############################################################################
#
# git configuration file
#
##############################################################################

[core]
  editor = vim
  excludesfile = ~/.gitignore-global,~/.gitignore,.node.gitignore,.go.gitignore,.python.gitignore
  ignorecase = false
  whitespace = trailing-space,space-before-tab,indent-with-non-tab

[user]
  name = jraberg
  email = jonas.raberg@gmail.com

[url "https://github.com/"]
  insteadOf = gh:

[url "https://gist.github.com/"]
  insteadOf = gist:

[url "https://bitbucket.org/"]
  insteadOf = bb:

[color]
  ui = true
  commit = red

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[alias]
  a = add
  
  l = log -30 --graph --pretty=format:"%Cred%h\\-\\ %C(bold\\ yellow)%d%Creset\\ %C(yellow)%s\\ %Creset\\ %C(blue)(%an)%Creset\\ %C(green)<%cr>%Creset"
  ls =  log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll =  log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
  lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  ld =  log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
  lg =  log --graph
  lme = log --graph --author='Jonas Raberg'

  co = checkout
   
  c = commit
  cm = commit -m
    
  st = status

[http]
  sslverify = false
