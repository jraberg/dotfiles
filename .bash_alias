# Weather in the terminal
alias getweth='curl wttr.in/linkoping?lang=se'

# Color on ls output
alias ls='ls --color=auto'
# long listing
alias ll='ls -la'
# List hidden files
alias l.='ls -d .* --color=auto'
# Use colordiff
alias diff='colordiff'
# Use color for the grep command
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# list sorted environment variablesÂ§
alias envs='env|sort'
# Clear the screen
alias c='clear'

# Show open ports
alias ports='netstat -tulanp'

# Add math support to the calculater
alias bc='bc -l'

# Don't delete root (/) and prompt if deleting more than 3 files
alias rm='rm -I --preserve-root'

# Add confirmation
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'

# Protect changes on root
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

# memory info
alias meminfo='free -m -l -t'

# List top memory processes
alias psmem='ps auxf | sort -nr -k 4'
alias psmem10='ps auxf | sort -nr -k 4 | head -10'

# Top CPU processes
alias pscpu='ps auxf | sort -nr -k 3'
alias pscpu10='ps auxf | sort -nr -k 3 | head -10'

# CPU info
alias cpuinfo='lscpu'
#alias cpuinfo='less /proc/cpuinfo'

# Formated mount listing
alias mount='mount |column -t'

alias df='df -H'
alias du='du -ch'

alias h='history'
alias j='jobs -l'
