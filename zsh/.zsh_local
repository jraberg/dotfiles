# alias
if [[ -r ~/.aliases ]]; then
  source ~/.aliases
fi

# functions
if [[ -r ~/.functions ]]; then
  source ~/.functions
fi


#MySQL Sandbox    
SANDBOX_BINARY=$HOME/mysql-bin
export SANDBOX_BINARY

# Go configuration
